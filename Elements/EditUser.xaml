<UserControl x:Class="Constructor_Konevskii.Elements.EditUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Constructor_Konevskii.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" KeyDown="UserControl_KeyDown">
<Grid Height="50" Margin="0, 0, 0, 10" Background="#494a4d" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Height="30" VerticalAlignment="Top" Margin="10,10,0,0" HorizontalAlignment="Left" Width="30"
             Stretch="UniformToFill" Source="/Constructor_Konevskii;component/Images/ic_user.png"/>
        <TextBox x:Name="tb_fio" VerticalContentAlignment="Center" KeyDown="TextBox_KeyDown"
             Margin="9.4,10,10.2,10" Grid.Column="1" Foreground="White" FontSize="14" Background="#494a4d" BorderThickness="0" Text=""/>
        <Button x:Name="tb_scholarship" VerticalContentAlignment="Center" KeyDown="TextBox_KeyDown"
             Margin="9.8,10" Grid.Column="2" Foreground="White" FontSize="14" Background="#494a4d" BorderThickness="0" Content="Получает" Click="ScholarShipChange"/>
        <TextBox x:Name="tb_Course" VerticalContentAlignment="Center" KeyDown="TextBox_KeyDown"
             Margin="9.2,10,9.6,10" Grid.Column="3" Foreground="White" FontSize="14" Background="#494a4d" BorderThickness="0" Text=""/>
</Grid>
</UserControl>
